
###### Basic app settings
NODE_ENV=development
SERVER_HOST=localhost
SERVER_PORT=8080
# SERVER_BASE_PATH=
LOG_LEVEL=debug
# Force application timezone (affects pretty logs)
TZ=UTC

# SQLite connection string
DATABASE_URL="file:./test-data/db/db.db"
# Directory for storing media files.
MEDIA_DIR="./test-data/media"
# Directory for storing thumbnail files.
THUMBNAILS_DIR="./test-data/thumbnails"

###### Application Configuration
# These settings configure the core application logic.

# OPTIONAL: Telegram ID of the super administrator
TELEGRAM_ADMIN_ID=""

###### Authentication
# MANDATORY: Change this to a long random string
JWT_SECRET="generate-a-very-long-and-secure-secret-here"
# MANDATORY: Token from @BotFather
TELEGRAM_BOT_TOKEN=""

###### Graceful Shutdown
# Timeout for graceful shutdown in milliseconds (default: 30000)
SHUTDOWN_TIMEOUT_MS=30000
