
###### Basic app settings
NODE_ENV=development
SERVER_HOST=localhost
SERVER_PORT=8080
# SERVER_BASE_PATH=
LOG_LEVEL=debug
# Force application timezone (affects pretty logs)
TZ=UTC

# SQLite connection string
DATABASE_URL="file:./test-data/db/db.db"
# Directory for storing media files.
MEDIA_DIR="./test-data/media"
# Directory for storing thumbnail files.
THUMBNAILS_DIR="./test-data/thumbnails"

###### Application Configuration
# These settings configure the core application logic.

# OPTIONAL: Telegram ID of the super administrator
TELEGRAM_ADMIN_ID=""

###### Authentication
# MANDATORY: Change this to a long random string
JWT_SECRET="generate-a-very-long-and-secure-secret-here"
# MANDATORY: Token from @BotFather
TELEGRAM_BOT_TOKEN=""

###### Graceful Shutdown
# Timeout for graceful shutdown in milliseconds (default: 30000)
SHUTDOWN_TIMEOUT_MS=30000

###### Scheduler Configuration
# Interval in seconds between scheduler checks (default: 60)
SCHEDULER_INTERVAL_SECONDS=60
# "Past window" in minutes for processing scheduled tasks (default: 10)
SCHEDULER_WINDOW_MINUTES=10

###### Post Processing
# Max time in seconds for a single post processing request (default: 30)
POST_PROCESSING_TIMEOUT_SECONDS=30

###### Social Posting Configuration
# Microservice URL (e.g., http://localhost:8080/api/v1)
SOCIAL_POSTING_SERVICE_URL="http://localhost:8080/api/v1"
# Total time limit for processing a request, including all retries and platform delays (seconds)
SOCIAL_POSTING_REQUEST_TIMEOUT_SECS=60
# How many times to retry a failed request before giving up
SOCIAL_POSTING_RETRY_ATTEMPTS=3
# Base delay before retrying a failed request (milliseconds)
SOCIAL_POSTING_RETRY_DELAY_MS=1000
# How long to keep idempotency keys in cache to prevent duplicate posts (minutes)
SOCIAL_POSTING_IDEMPOTENCY_TTL_MINUTES=10
